{
    "$schema": "https://turbo.build/schema.json",
    "ui": "tui",
    "globalDependencies": [
        "bun.lockb",
        "tsconfig.json"
    ],
    "globalEnv": [
        "NODE_ENV"
    ],
    "tasks": {
        "build": {
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                "build/**",
                ".next/**",
                ".output/**",
                ".wrangler/**"
            ]
        },
        "dev": {
            "cache": false,
            "persistent": true
        },
        "lint": {
            "dependsOn": [
                "^lint"
            ],
            "outputs": []
        },
        "typecheck": {
            "dependsOn": [
                "^typecheck"
            ],
            "outputs": []
        },
        "test": {
            "dependsOn": [
                "^test"
            ],
            "outputs": []
        },
        "clean": {
            "cache": false
        }
    }
}